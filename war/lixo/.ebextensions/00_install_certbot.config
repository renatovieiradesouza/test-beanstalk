packages:
  yum:
    certbot: []
    python3-certbot-nginx: []

files:
  "/var/www/letsencrypt/.keep":
    mode: "000644"
    owner: root
    group: root
    content: " "
  "/etc/cron.d/certbot":
    mode: "000644"
    owner: root
    group: root
    content: |
      # Renew Let's Encrypt certificates daily
      0 3 * * * root certbot renew --quiet --post-hook "systemctl reload nginx"

commands:
  01_create_webroot:
    command: "mkdir -p /var/www/letsencrypt"

